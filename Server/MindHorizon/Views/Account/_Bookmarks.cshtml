@model List<MindHorizon.ViewModels.Post.PostViewModel>
@using MindHorizon.Common

<div class="profile-feed row">
    @if (Model.Count() != 0)
    {
        @foreach (var item in Model)
        {
            <div class="profile-activity clearfix">
                <div>
                    <a href="~/Posts/@item.PostId/@item.Url"> @item.Title</a>

                    <div class="time">
                        <i class="ace-icon fa fa-clock-o bigger-110"></i>
                        @item.PersianPublishDate
                    </div>
                </div>

                <div class="tools action-buttons">
                    <a href="#" data-toggle="ajax-modal" data-url="@Url.Action("DeleteBookmark","Account",new {userId=User.Identity.GetUserId<int>(),postId=item.PostId})">
                        <i class="ace-icon fa fa-times text-danger"></i>
                    </a>
                </div>
            </div>
        }
    }
    else
    {
<p class="alert alert-info w-100 text-center">هیچ مطلبی بوکمارک نشده است.</p>
    }

</div>